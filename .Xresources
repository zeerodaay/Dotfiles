! URxvt

! General settings
URxvt.iso14755 : false
URxvt.saveLines: 2000
URxvt.scrollBar: False
URxvt.scrollstyle: rxvt
URxvt.termName: xterm-256color
URxvt.urgentOnBell: True
URxvt.cursorBlink: True
URxvt*shading: 10

! Extensions
URxvt.perl-ext-common: default,clipboard
URxvt.urlLauncher: xdg-open
URxvt.urlButton: 1
URxvt.underlineURLs: True

!URxvt.copyCommand:  xclip -i -selection clipboard
!URxvt.pasteCommand: xclip -o -selection clipboard

! Keybindings
URxvt.keysym.Shift-Control-C: perl:clipboard:copy
URxvt.keysym.Shift-Control-V: perl:clipboard:paste

! Font
URxvt.font:     xft:Fantasque Sans Mono-12,xft:PowerlineSymbols,xft:Font Awesome:size=10
URxvt.boldFont: xft:Fantasque Sans Mono-12,xft:PowerlineSymbols,xft:Font Awesome:size=10
URxvt.letterSpace: 0

!urxvt*depth: 32
!urxvt*transparent: true
! Gruvbox theme
URxvt.depth:32
URxvt.background: [85]#333333
URxvt.foreground: #1cb3ff

! Black + DarkGrey
URxvt.color0:  #17181a
URxvt.color8:  #333333
! DarkRed + Red
URxvt.color1:  #d81313
URxvt.color9:  #e50b0b
! DarkGreen + Green
URxvt.color2:  #099638
URxvt.color10: #10d11d
! DarkYellow + Yellow
URxvt.color3:  #ede502
URxvt.color11: #fff832
! DarkBlue + Blue
URxvt.color4:  #1472a0
URxvt.color12: #1793d1
! DarkMagenta + Magenta
URxvt.color5:  #d80242
URxvt.color13: #ff1c5f
! DarkCyan + Cyan
URxvt.color6:  #00a9ff
URxvt.color14: #1cb3ff
! LightGrey + White
URxvt.color7:  #cccccc
URxvt.color15: #f4f4f4

! Layout
rofi.width:                          50
rofi.lines:                          15
rofi.columns:                        2
rofi.color-enabled:                  true
rofi.color-normal:                   #282828,#ebdbb2,#353535,#ff9800,#282828
rofi.color-urgent:                   #282828,#d79921,#353535,#d79921,#282828
rofi.color-active:                   #282828,#ebdbb2,#353535,#ff9800,#282828
rofi.color-window:                   #282828,#ff9800

! Behaviour
rofi.terminal:                       urxvt
rofi.levenshtein-sort:               true
rofi.fuzzy:                          true
rofi.kb-cancel: Escape,Control+c
